<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="KitchenOrderButton" owl="1">
        <span class="control-button kitchen_order">
            <i class="fa fa-tag"></i>
            <span> </span>
            <span>Kitchen Order</span>
        </span>
    </t>
    <t t-name="SendToKitchen" owl="1">
        <span class="control-button kitchen_order">
            <i class="fa fa-tag"></i>
            <span></span>
            <span>Send to Kitchen</span>
        </span>
    </t>
    <t t-name="kitchenScreenWidget" owl="1">
        <div class="kitchen-screen screen">
            <div>
                <h2>Kitchen Screen</h2>
            </div>
            <div class="screen-content">
                <section class="top-content">
                    <t t-if="env.pos.user.kitchen_screen_user === 'manager'">
                        <span class='button discard' t-on-click="trigger('close-screen')">
                            <i class='fa fa-angle-double-left'></i>
                            Back
                        </span>
                    </t>

                    <div class="kitchen-buttons" style="padding-left: 25%;">
<!--                        <t t-if="env.pos.user.kitchen_screen_user === 'manager'">-->
                        <span t-att-value="all_orders" class='button category' t-on-click="all_category()" style="cursor:pointer">
                            All
                        </span>
<!--                        </t>-->
                        <span t-att-value="pos" t-on-click="pos_category()" class='button category'
                              style="cursor:pointer">
                                POS
                        </span>
                        <span t-att-value="web-store" t-on-click="web_store_category()" class='button category'
                              style="cursor:pointer">
                                Web-Store
                        </span>
                        <span t-att-value="uber" t-on-click="uber_category()" class='button category'
                              style="cursor:pointer">
                                Uber Eats
                        </span>
                        <span t-att-value="deliveroo" t-on-click="deliveroo_category()" class='button category'
                              style="cursor:pointer">
                                Deliveroo
                        </span>

                    </div>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y order-list-scroll'
                                     style="">
                                    <div class="kitchen-orders">
                                        <div class="order-list">
                                            <span class="order-line header">
                                                <div class="order-product">Name</div>
                                                <div class="order-qty">Quantity</div>
                                                <div class="order-table">Table</div>
                                                <div class="order-time">Time</div>
                                                <div class="order-state">State</div>
                                                <div class="order-note">Note</div>
<!--                                                <div class="order-receipt-print" style="width: 5%;"/>-->
                                            </span>
                                            <div class='all-order-list-contents'>
                                                 <t t-foreach="orderList" t-as="order" t-key="order.cid">
                                                     <div t-att-class="order.id">
                                                         <div class="order-line">
                                                             <div class="order-product">
                                                                <t t-esc="order.full_product_name"></t>
                                                            </div>
                                                             <div class="order-qty">
                                                            <t t-esc="order.qty"></t>
                                                            </div>
                                                             <div class="order-table">
                                                                 <t t-if="order.table">
                                                                     <t t-esc="order.table"></t>
                                                                 </t>-<t t-if="order.floor">
                                                                 <t t-esc="order.floor"></t>
                                                             </t>
                                                             </div>
                                                             <div class="order-time">
                                                            <t t-esc="order.create_date"></t>
                                                        </div>
                                                             <div class="order-state">
                                                                 <button t-att-class="order.id"
                                                                         value="order.order_line_state">
                                                                     <t t-esc="order.order_line_state"></t>
                                                                 </button>
                                                            </div>
                                                             <div class="order-note">
                                                             <t t-if="order.note">
                                                            <t t-esc="order.note"></t>
                                                             </t>
                                                        </div>
<!--
                                                             <div class="order-receipt">
                                                             <button t-on-click="PrintOrder(order)">Print Receipt</button>
                                                        </div>
-->
                                                         </div>
                                                     </div>
                                                 </t>
                                                <t t-foreach="saleorderList" t-as="sale_order"
                                                   t-key="saleorderList.cid">
                                                     <div t-att-class="sale_order.id">

                                                             <div class="order-line">
                                                                 <div class="order-product">
                                                                    <t t-esc="sale_order.product_id[1]"></t>
                                                                </div>
                                                                 <div class="order-qty">
                                                                    <t t-esc="sale_order.product_uom_qty"></t>
                                                                </div>
                                                                 <div class="order-table">Web Order</div>
                                                                 <div class="order-time"><t t-esc="sale_order.create_date"></t></div>
                                                                 <div class="order-state">
                                                                     <button t-att-class="sale+sale_order.id"
                                                                             value="sale_order.order_line_state">
                                                                         <t t-esc="sale_order.order_line_state"></t>
                                                                     </button>
                                                                    </div>
                                                                 <div class="order-note">
                                                                     <t t-if="sale_order.note">
                                                                    <t t-esc="sale_order.note"></t>
                                                                     </t>
                                                                </div>
                                                         </div>
                                                     </div>
                                                 </t>
                                            </div>
                                            <div class='pos-order-list order-list-contents' style="display:none;">
                                                 <t t-foreach="orderList" t-as="order" t-key="order.cid">
                                                     <div t-att-class="order.id">
                                                         <div class="order-line">
                                                             <div class="order-product">
                                                                <t t-esc="order.full_product_name"></t>
                                                            </div>
                                                             <div class="order-qty">
                                                            <t t-esc="order.qty"></t>
                                                            </div>
                                                             <div class="order-table">
                                                                 <t t-if="order.table">
                                                                     <t t-esc="order.table"></t>
                                                                 </t>-<t t-if="order.floor">
                                                                 <t t-esc="order.floor"></t>
                                                             </t>
                                                             </div>
                                                             <div class="order-time">
                                                            <t t-esc="order.create_date"></t>
                                                        </div>
                                                             <div class="order-state">
                                                                 <button t-att-id="order.id"
                                                                         value="order.order_line_state"
                                                                         t-on-click="selectOrder(order)">
                                                                     <t t-esc="order.order_line_state"></t>
                                                                 </button>
                                                            </div>
                                                             <div class="order-note">
                                                             <t t-if="order.note">
                                                            <t t-esc="order.note"></t>
                                                             </t>
                                                            </div>
<!--                                                             <div class="order-receipt">-->
<!--                                                             <button t-on-click="PrintOrder(order)">Print Receipt</button>-->
<!--                                                            </div>-->
                                                         </div>
                                                     </div>
                                                 </t>
                                            </div>

                                            <div class='sale-order-list order-list-contents' style="display:none;">
                                                 <t t-foreach="saleorderList" t-as="sale_order" t-key="sale_order.cid">
                                                     <div class="order-line">
                                                         <div class="order-product">
                                                            <t t-esc="sale_order.product_id[1]"></t>
                                                        </div>
                                                         <div class="order-qty">
                                                            <t t-esc="sale_order.product_uom_qty"></t>
                                                        </div>
                                                         <div class="order-table">Web Order</div>
                                                         <div class="order-time"><t t-esc="sale_order.create_date"></t></div>
                                                         <div class="order-state">
                                                             <button t-att-id="sale_order.id"
                                                                     value="sale_order.order_line_state"
                                                                     t-on-click="selectSaleOrder(sale_order)">
                                                                 <t t-esc="sale_order.order_line_state"></t>
                                                             </button>
                                                            </div>
                                                         <div class="order-note">
                                                             <t t-if="sale_order.note">
                                                            <t t-esc="sale_order.note"></t>
                                                             </t>
                                                        </div>
                                                 </div>
                                                 </t>
                                            </div>
                                            <div class='uber-eats order-list-contents' style="display:none;">
                                            </div>
                                            <div class='deliveroo-order-list order-list-contents' style="display:none;">
                                            </div>
                                        </div>

                                        <div class="order-kanban disappear">
                                            <div class='table-order-contents'>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

</templates>
